# Django debug mode - Set to False in production
DEBUG=True

# Django secret key for cryptographic signing - Keep this secret and change in production
SECRET_KEY=your-secret-key-here

# Database configuration
DB_NAME=supportsystem
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Comma-separated list of allowed hosts for Django
ALLOWED_HOSTS=localhost,127.0.0.1

# Email configuration for sending emails
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_app_password

# Celery configuration for async tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Admin email for system notifications
ADMIN_EMAIL=admin@example.com